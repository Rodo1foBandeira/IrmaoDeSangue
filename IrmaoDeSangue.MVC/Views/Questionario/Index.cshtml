@Model IrmaoDeSangue.MVC.Models.QuestionarioModels

@{
    ViewBag.Title = "Index";
}

<style>
    table {
        font-family: arial, sans-serif;
        border-collapse: collapse;
        width: 100%;
    }

    td, th {
        border: 1px solid #dddddd;
        text-align: left;
        padding: 8px;
    }

    tr:nth-child(even) {
        background-color: #dddddd;
    }
</style>

<h2>Questionario</h2>

@foreach (var item in Model)
{
    <table>
        <tr>
            <th>Codigo</th>
            <th>Descrição</th>
            <th>Tipo</th>
        </tr>
        <tr>
            <td>@item.Codigo</td>
            <td>@item.Descricao</td>
            <td>@item.Tipo</td>
        </tr>
    </table>
}