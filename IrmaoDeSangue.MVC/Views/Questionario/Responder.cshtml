@model IrmaoDeSangue.MVC.Models.QuestionarioModel
@{
    ViewBag.Title = "Responder";
    var cont = 0;
}

<h2>Questionario</h2>

@using (Html.BeginForm("ValidarRespostas", "Questionario", FormMethod.Post, new { @id = "questionario"}))
{
    @Html.HiddenFor(m => m.Pessoa.Codigo);
    <table class="table table-responsive"> 
        <thead>
            <tr>
                <th>Responda</th>
                <th>Sim/Não</th>
            </tr>
        </thead>

        <tbody>    
    @foreach (var item in Model.Perguntas)
    {
                <tr>
                    <td>@item.Descricao</td>
                    <td>   
                        <div class="btn-group">
                            @Html.Hidden("Perguntas[" + cont + "].Codigo", item.Codigo)
                            <label style="font-size: 1em "><input type="radio" style="width:25px" name="Perguntas[@cont].Resposta" value="true" required>Sim</label>
                            <label style="font-size: 1em "><input type="radio" style="width:25px" name="Perguntas[@cont].Resposta" value="false" required>Não</label>
                        </div>
                    </td>
                </tr>
        cont++;
    }
        </tbody>
    </table>

    <div>
        <button type="submit" class="btn btn-primary">Confirmar</button>
        <button type="button" class="btn btn-danger">Cancelar</button>
    </div>
}
    
